{
    "manifest_version": 3,
    "name": "Rewriter",
    "version": "1.0",
    "description": "Rewrite highlighted text to sound more professional.",
    "permissions": ["activeTab", "contextMenus", "scripting", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"]
      }
    ],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  